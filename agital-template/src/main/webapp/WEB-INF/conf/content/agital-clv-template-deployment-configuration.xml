<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">


  <!-- Deploy template for Content List Viewer Portlet -->
  <external-component-plugins>
    <target-component>org.exoplatform.services.cms.views.ApplicationTemplateManagerService</target-component>
    <component-plugin>
      <name>clv.templates.plugin</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.services.cms.views.PortletTemplatePlugin</type>
      <description>This plugin is used to import views templates for Content List Viewer</description>
      <init-params>
        <value-param>
          <name>portletName</name>
          <value>content-list-viewer</value>
        </value-param>
        <value-param>
          <name>portlet.template.path</name>
          <value>war:/conf/content/artifacts/application-templates/content-list-viewer</value>
        </value-param>
        
        <object-param>
          <name>Agital Banner</name>
          <description>Agital Banner</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital Banner</string>
            </field>
            <field name="templateName">
              <string>AgitalBanner.gtmpl</string>
            </field>
            <field name="category">
              <string>list</string>
            </field>
          </object>
        </object-param>
        
        <object-param>
          <name>Agital Home News</name>
          <description>Agital Home News</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital Home News</string>
            </field>
            <field name="templateName">
              <string>AgitalHomeNews.gtmpl</string>
            </field>
            <field name="category">
              <string>list</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>Agital Home Articles</name>
          <description>Agital Home Articles</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital Home Articles</string>
            </field>
            <field name="templateName">
              <string>AgitalHomeArticles.gtmpl</string>
            </field>
            <field name="category">
              <string>list</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>Agital About Testimonials</name>
          <description>Agital About Testimonials</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital About Testimonials</string>
            </field>
            <field name="templateName">
              <string>AgitalAboutTestimonials.gtmpl</string>
            </field>
            <field name="category">
              <string>list</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>Agital About Our TeamWork</name>
          <description>Agital About Our TeamWork</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital About Our Team Work</string>
            </field>
            <field name="templateName">
              <string>AgitalAboutOurTeamWork.gtmpl</string>
            </field>
            <field name="category">
              <string>list</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>Agital Services</name>
          <description>Agital Services</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital Services</string>
            </field>
            <field name="templateName">
              <string>AgitalServices.gtmpl</string>
            </field>
            <field name="category">
              <string>list</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>Agital Blog Blog</name>
          <description>Agital Blog Blog</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital Blog Blog</string>
            </field>
            <field name="templateName">
              <string>AgitalBlogBlog.gtmpl</string>
            </field>
            <field name="category">
              <string>list</string>
            </field>
          </object>
        </object-param>
        
        <object-param>
          <name>Agital Blog Archives</name>
          <description>Agital Blog Archives</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
              <string>Agital Blog Archives</string>
            </field>
            <field name="templateName">
              <string>AgitalBlogArchives.gtmpl</string>
            </field>
            <field name="category">
              <string>navigation</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>Agital Blog Categories</name>
          <description>Agital Blog Categories</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
              <string>Agital Blog Categories</string>
            </field>
            <field name="templateName">
              <string>AgitalBlogCategories.gtmpl</string>
            </field>
            <field name="category">
              <string>navigation</string>
            </field>
          </object>
        </object-param>
        
        <object-param>
          <name>default.paginator</name>
          <description>Agital Default paginator groovy template</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital Default Paginator</string>
                        </field>
            <field name="templateName">
              <string>AgitalDefaultPaginator.gtmpl</string>
            </field>
            <field name="category">
              <string>paginators</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <!-- Deploy template for Search Portlet -->
  <external-component-plugins>
    <target-component>org.exoplatform.services.cms.views.ApplicationTemplateManagerService</target-component>
    <component-plugin>
      <name>search.templates.plugin</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.services.cms.views.PortletTemplatePlugin</type>
      <description>This plugin is used to import views templates for search ui</description>
      <init-params>
        <value-param>
          <name>portletName</name>
          <value>search</value>
        </value-param>
        <value-param>
          <name>portlet.template.path</name>
          <value>war:/conf/content/artifacts/application-templates/wcm-search</value>
        </value-param>
        <object-param>
          <name>default.searchPageLayout</name>
          <description>Default search page layout template</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital Page Layout</string>
                        </field>
            <field name="templateName">
              <string>AgitalPageLayout.gtmpl</string>
            </field>
            <field name="category">
              <string>search-page-layout</string>
            </field>
          </object>
        </object-param>        
        <object-param>
          <name>default.searchForm</name>
          <description>Agital default search form template</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>AgitalForm</string>
                        </field>
            <field name="templateName">
              <string>AgitalForm.gtmpl</string>
            </field>
            <field name="category">
              <string>search-form</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>default.searchResult</name>
          <description>Agital default search result template</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>AgitalResults</string>
                        </field>
            <field name="templateName">
              <string>AgitalResults.gtmpl</string>
            </field>
            <field name="category">
              <string>search-result</string>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>default.searchPaginator</name>
          <description>Default search paginator template</description>
          <object type="org.exoplatform.services.cms.views.PortletTemplatePlugin$PortletTemplateConfig">
            <field name="title">
               <string>Agital Paginator</string>
                        </field>
            <field name="templateName">
              <string>AgitalPaginator.gtmpl</string>
            </field>
            <field name="category">
              <string>search-paginator</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>
