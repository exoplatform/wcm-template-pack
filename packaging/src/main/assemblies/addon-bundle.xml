<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>addon-bundle</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.exoplatform.addons.wcm-template:agital-template:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>agital-template.war</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>  
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
      <include>org.exoplatform.addons.wcm-template:globex-template:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>globex-template.war</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
	      <outputDirectory>/</outputDirectory>
		  <includes>
		      <include>org.exoplatform.addons.wcm-template:responsive-template:war</include>
		  </includes>
		  <scope>provided</scope>
		  <outputFileNameMapping>responsive-template.war</outputFileNameMapping>
		  <useProjectArtifact>false</useProjectArtifact>
	</dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.exoplatform.addons.wcm-template:wai-template:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>wai-template.war</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.exoplatform.addons.wcm-template:template-pack-config:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>template-pack-config.jar</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>    
  </dependencySets>
</assembly>
